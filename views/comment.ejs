<br />
<% if(post.comments){ %>
  <% post.comments.forEach(function (comment, index) { %>
    <div style="padding-left:4em">
    <p><img src="<%= comment.head %>" class="l_head" /><a href="<%= comment.website %>"><%= comment.name %></a>
    <span class="blog-post-meta"> 回复于 <%= comment.time %></span></p>
    <p><%- comment.content %></p>
  </div>
  <% }) %>
<% } %>
<form role="form" method="post" action="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
<% if (user) { %>
  姓名：<input type="text" name="name" value="<%= user.name %>" /><br />
  邮箱：<input type="text" name="email" value="<%= user.email %>" /> （不会公开）<br />
  网址：<input type="text" name="website" value="/u/<%= user.name %>" /><br />
<% } else { %>
  姓名：<input type="text" name="name" /><br />
  邮箱：<input type="text" name="email" /> （不会公开）<br />
  网址：<input type="text" name="website" value="http://" /><br />
<% } %>
  <br>
  <textarea name="content" rows="5" cols="80"></textarea><br />
  <input type="submit" value="留言" />
</form>