<%- include header %>
<form method="post" role="form">
	<div  class="form-group">
		<label for="post-tile">标题：</label>
		<input id="post-tile" class="form-control input-lg" type="text" name="title" required>
	</div>
	<div  class="form-group">
		<label for="post-tag">标签：</label>
		<input id="post-tag" class="form-control input-sm" type="text" name="tag1"><input class="form-control input-sm" type="text" name="tag2"><input class="form-control input-sm" type="text" name="tag3">
	</div>
	<div  class="form-group">
		<label for="post-post">正文：</label>
		<textarea id="post-post" class="form-control" name="post" rows="20" cols="100" required></textarea>
	</div>
	<button type="submit" class="btn btn-primary">发表</button>
</form>
