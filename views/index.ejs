<%- include header %>
<%- include nav %>
<div class="row" id="main_body">
      <div class="col-sm-8 blog-main">
<div class="blog-post">
<% posts.forEach(function (post, index) { %>
  <p><h2 class="blog-post-title"><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2><a href="/u/<%= post.name %>"><img src="<%= post.head %>" class="r_head" /></a></p>
  <p class="blog-post-meta">
  <!-- <%  %>这里'%'两端的空格一定要有 -->
    作者：<a title="访问<%= post.name %>的文章页" href="/u/<%= post.name %>"><%= post.name %></a> | 
    日期：<%= post.time.minute %>
    标签：
    <% if (post.tags) { %>
    	<% post.tags.forEach(function (tag, index) { %>
    		<% if (tag) { %>
    			<a class="label label-success" href="/tags/<%= tag %>"><%= tag %></a>
    		<% } %>
    	<% }) %>
    <% } %>
  </p>
  <div class="post-main"><%- post.post %></div>
  <p class="elli">...</p>
  <a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">阅读全文</a>
  <p class="blog-post-meta">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p>
<% }) %>
</div>
<%- include paging %>
<!-- /.blog-main -->
</div>
<div class="col-sm-3 col-sm-offset-1 blog-sidebar">
  <%- include sidebar_about %>
  <%- include sidebar_archive %>
  <%- include sidebar_tags %>
</div><!-- /.blog-sidebar -->
<!-- /.row -->
</div>
<!-- /.container -->
</div>
<%- include footer %>